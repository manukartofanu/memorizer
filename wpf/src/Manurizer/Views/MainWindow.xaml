		<Style TargetType="Button" x:Key="ActionButton">
			<Setter Property="Width" Value="104"/>
			<Setter Property="Height" Value="32"/>
			<Setter Property="FontFamily" Value="Segoe UI"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="HorizontalAlignment" Value="Right"/>
			<Setter Property="VerticalAlignment" Value="Top"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="BorderBrush" Value="#011627"/>
		</Style>
		<Style TargetType="Button" x:Key="PrimaryActionButton" BasedOn="{StaticResource ActionButton}">
			<Setter Property="Background" Value="#011627"/>
			<Setter Property="Foreground" Value="#E3E6E7"/>
		</Style>
		<Style TargetType="Button" x:Key="SecondaryActionButton" BasedOn="{StaticResource ActionButton}">
			<Setter Property="Background" Value="#FFFFFF"/>
			<Setter Property="Foreground" Value="#011627"/>
		</Style>
	</Window.Resources>
	<DockPanel Background="#FFFFFF">
		<ListView Padding="0 28 0 0" Width="240" Background="#F2F3F5" SelectedIndex="0" DockPanel.Dock="Left">
			<ListView.Resources>
				<Style TargetType="ListViewItem">
					<Style.Setters>
						<Setter Property="Background" Value="Transparent"/>
						<Setter Property="BorderThickness" Value="0"/>
						<Setter Property="Margin" Value="0 8 0 8"/>
						<Setter Property="Foreground" Value="#6D747C"/>
						<Setter Property="FontFamily" Value="Segoe UI"/>
						<Setter Property="FontSize" Value="16"/>
						<Setter Property="Width" Value="208"/>
						<Setter Property="Height" Value="32"/>
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="ListViewItem">
									<Border Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="4">
										<ContentPresenter VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style.Setters>
					<Style.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Background" Value="#EBECEF"/>
						</Trigger>
						<Trigger Property="IsSelected" Value="True">
							<Setter Property="Background" Value="#E4E6E9"/>
							<Setter Property="Foreground" Value="#011627"/>
							<Setter Property="FontWeight" Value="SemiBold"/>
						</Trigger>
					</Style.Triggers>
				</Style>
				<Style TargetType="Image">
					<Setter Property="Height" Value="24"/>
					<Setter Property="Width" Value="24"/>
					<Setter Property="Margin" Value="8 0 8 0"/>
				</Style>
			</ListView.Resources>
			<ListViewItem>
				<StackPanel Orientation="Horizontal">
					<Image>
						<Image.Source>
							<DrawingImage>
								<DrawingImage.Drawing>
									<DrawingGroup ClipGeometry="M0,0 V32 H32 V0 H0 Z">
										<GeometryDrawing Brush="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Geometry="{StaticResource GeometryList}"/>
									</DrawingGroup>
								</DrawingImage.Drawing>
							</DrawingImage>
						</Image.Source>
					</Image>
					<TextBlock VerticalAlignment="Center">Vocabulary list</TextBlock>
				</StackPanel>
			</ListViewItem>
			<ListViewItem>
				<StackPanel Orientation="Horizontal">
					<Image>
						<Image.Source>
							<DrawingImage>
								<DrawingImage.Drawing>
									<DrawingGroup ClipGeometry="M0,0 V32 H32 V0 H0 Z">
										<GeometryDrawing Brush="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Geometry="{StaticResource GeometryGroup}"/>
									</DrawingGroup>
								</DrawingImage.Drawing>
							</DrawingImage>
						</Image.Source>
					</Image>
					<TextBlock VerticalAlignment="Center">Group management</TextBlock>
				</StackPanel>
			</ListViewItem>
			<ListViewItem>
				<StackPanel Orientation="Horizontal">
					<Image>
						<Image.Source>
							<DrawingImage>
								<DrawingImage.Drawing>
									<DrawingGroup ClipGeometry="M0,0 V32 H32 V0 H0 Z">
										<GeometryDrawing Brush="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Geometry="{StaticResource GeometryTraining}"/>
									</DrawingGroup>
								</DrawingImage.Drawing>
							</DrawingImage>
						</Image.Source>
					</Image>
					<TextBlock VerticalAlignment="Center">Training</TextBlock>
				</StackPanel>
			</ListViewItem>
			<ListViewItem>
				<StackPanel Orientation="Horizontal">
					<Image>
						<Image.Source>
							<DrawingImage>
								<DrawingImage.Drawing>
									<DrawingGroup ClipGeometry="M0,0 V32 H32 V0 H0 Z">
										<GeometryDrawing Brush="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Geometry="{StaticResource GeometryList}"/>
									</DrawingGroup>
								</DrawingImage.Drawing>
							</DrawingImage>
						</Image.Source>
					</Image>
					<TextBlock VerticalAlignment="Center">Settings</TextBlock>
				</StackPanel>
			</ListViewItem>
		</ListView>
		<Grid>
			<ListBox Height="300" ItemsSource="{Binding Path=Words}" SelectedItem="{Binding Path=SelectedWord}"
					 BorderBrush="Transparent">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock>
								<Run Text="{Binding Path=Name}" FontWeight="SemiBold" FontSize="16" Foreground="Black"/>
								<Run FontSize="14" Foreground="#555564"> | </Run>
								<Run Text="{Binding Path=Category}" FontSize="14" Foreground="#555564"/>
								<Run FontSize="14" Foreground="#555564"> | </Run>
								<Run Text="{Binding Path=Meaning}" FontSize="14" Foreground="Black"/>
						</TextBlock>
					</DataTemplate>
				</ListBox.ItemTemplate>
				<ListBox.ItemContainerStyle>
					<Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
						<EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
					</Style>
				</ListBox.ItemContainerStyle>
			</ListBox>
			<Button Command="{Binding Path=WordAddCommand}" CommandParameter="{Binding ElementName=window}"
					Style="{StaticResource PrimaryActionButton}" Margin="0 28 48 0">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="4"/>
					</Style>
				</Button.Resources>
				Add word
			</Button>
			<Button Command="{Binding Path=WordDeleteCommand}"
					Style="{StaticResource SecondaryActionButton}" Margin="0 72 48 0">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="4"/>
					</Style>
				</Button.Resources>
				Delete word
			</Button>
			<Button Command="{Binding Path=WordCopyCommand}"
					Style="{StaticResource SecondaryActionButton}" Margin="0 28 164 0">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="4"/>
					</Style>
				</Button.Resources>
				Copy word
			</Button>
			<Button Style="{StaticResource SecondaryActionButton}" Margin="0 28 280 0">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="4"/>
					</Style>
				</Button.Resources>
				Add topic
			</Button>
			<Button Command="{Binding Path=TrainCommand}" CommandParameter="{Binding ElementName=window}"
					Style="{StaticResource SecondaryActionButton}" Margin="0 28 396 0">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="4"/>
					</Style>
				</Button.Resources>
				Train
			</Button>
		</Grid>
	</DockPanel>
</Window>
